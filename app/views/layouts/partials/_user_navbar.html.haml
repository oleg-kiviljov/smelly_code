%nav.navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path}
        %strong
          Smelly
          %i.fa.fa-code
          Code
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li{class: ('active' if controller_name == 'snippets' && action_name == 'index')}
          %a{href: snippets_path} Snippets
        %li{class: ('active' if controller_name == 'pages' && action_name == 'faq')}
          %a{href: faq_path} F.A.Q
        %li
          %a{href: '#new-snippet', data: {'toggle' => 'modal'}} Post a snippet
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            %i.fa.fa-user
            = current_user.username
          %ul.dropdown-menu
            %li
              = link_to 'Profile', user_path(current_user)
            %li
              = link_to 'Settings', settings_path
            %li
              = link_to 'Sign out', destroy_user_session_path, method: :delete
